<!-- Bottone per mobile -->
<button class="btn btn-primary m-3 toggle-sidebar-btn d-md-none w-25" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMobile" aria-controls="sidebarMobile">
    Menu
</button>

<!-- Sidebar desktop -->
<div>
    <div class="sidebar-desktop bg-dark pt-4 position-sticky top-0">

        <a asp-page="/Account" class="sidebar-link text-light">Utente</a>
        <a asp-page="CronologiaCorse" class="sidebar-link text-light">Corse</a>
        <a asp-page="/Ricarica" class="sidebar-link text-light">Ricarica</a>
        <a asp-page="/Shop" class="sidebar-link text-light">Shop</a>
        <a asp-page="/CronologiaPagamenti" class="sidebar-link text-light">Pagamenti</a>
        @if (Model.Username == "admin")
        {
            <a asp-page="/Mezzi" class="sidebar-link text-light"> Mezzi</a>
            <a asp-page="/Utenti" class="sidebar-link text-light"> Utenti</a>

            <a asp-page="/AggiungiMezzo" class="sidebar-link text-light"> Aggiungi Mezzo</a>
            <a asp-page="/AggiungiParcheggio" class="sidebar-link text-light"> Aggiungi Parcheggio</a>
            <a asp-page="/ModificaPrezzi" class="sidebar-link text-light"> Modifica Prezzi</a>
        }
        <form asp-page="/Logout" method="get">
            <button type="submit" class="btn btn-danger ms-3">Logout</button>
        </form>

    </div>
</div>
<!-- Sidebar mobile (offcanvas) -->
<div class="offcanvas offcanvas-start bg-dark" tabindex="-1" id="sidebarMobile" aria-labelledby="sidebarMobileLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title text-light" id="sidebarMobileLabel">Menu</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Chiudi"></button>
    </div>
    <div class="offcanvas-body">
        <a asp-page="/Account" class="sidebar-link text-light">Utente</a>
        <a asp-page="CronologiaCorse" class="sidebar-link text-light">Corse</a>
        <a asp-page="/Ricarica" class="sidebar-link text-light">Ricarica</a>
        <a asp-page="/Shop" class="sidebar-link text-light">Shop</a>
        <a asp-page="/CronologiaPagamenti" class="sidebar-link text-light">Pagamenti</a>
        @if (Model.Username == "admin")
        {
            <a asp-page="/Mezzi" class="sidebar-link text-light">Mezzi</a>
            <a asp-page="/Utenti" class="sidebar-link text-light">Utenti</a>

            <a asp-page="/AggiungiMezzo" class="sidebar-link text-light">Aggiungi Mezzo</a>
            <a asp-page="/AggiungiParcheggio" class="sidebar-link text-light">Aggiungi Parcheggio</a>
            <a asp-page="/ModificaPrezzi" class="sidebar-link text-light">Modifica Prezzi</a>
        }
        <form asp-page="/Logout" method="get">
            <button type="submit" class="btn btn-danger ms-3">Logout</button>
        </form>
    </div>

</div>